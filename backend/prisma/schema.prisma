generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Stock {
  id     String  @id @default(uuid())
  ticker String
  name   String
  cnpj   String
  Order  Order[]

  @@unique([ticker])
  @@unique([cnpj])
  @@map("stock")
}

model Note {
  id                   String   @id @default(uuid())
  date                 DateTime
  fees                 Decimal
  withholding_income_tax Decimal
  Order                Order[]

  @@unique([date])
  @@map("note")
}

model Order {
  id       String  @id @default(uuid())
  note_id  String
  stock_id String
  type     Boolean
  quantity Int
  price    Decimal
  note     Note    @relation(fields: [note_id], references: [id])
  stock    Stock   @relation(fields: [stock_id], references: [id])

  @@map("order")
}
